rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permitir que usuários autenticados criem/leiam seu próprio documento de usuário
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para stores multi-tenant
    // Cada usuário autenticado só pode acessar sua própria "loja"
    match /stores/{storeId}/{collection}/{document=**} {
      // Permitir acesso apenas se o storeId do path corresponder ao storeId armazenado no documento do usuário
      allow read, write: if request.auth != null 
                         && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.storeId == storeId;
    }
    
    // Regra global: negar tudo por padrão
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Se você tiver um catálogo global (opcional - comentado por padrão)
    // match /catalogo_servicos_global/{doc} {
    //   allow read: if request.auth != null;
    //   allow write: if false; // Apenas administradores via Functions
    // }
  }
}
