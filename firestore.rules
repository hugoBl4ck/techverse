rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function para verificar se o usuário é superadmin
    function isSuperAdmin() {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true;
    }
    
    // Helper function para verificar se o usuário tem acesso à loja
    function userOwnsStore(storeId) {
      return request.auth != null 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.storeId == storeId;
    }
    
    // Permitir que usuários autenticados criem/leiam seu próprio documento de usuário
    // Superadmin pode ler todos os usuários
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para stores multi-tenant - nível da loja
    match /stores/{storeId} {
      allow read: if userOwnsStore(storeId);
      allow write: if false; // Loja é criada apenas via backend/admin
      
      // Coleções dentro da loja
      match /{collection}/{document=**} {
        allow read, write: if userOwnsStore(storeId);
      }
    }

    // Promoções - público pode ler, apenas superadmin pode escrever/deletar
    match /promos/{document=**} {
      allow read: if true;
      allow write, delete: if isSuperAdmin();
    }

    // Notícias - público pode ler, usuários autenticados podem escrever (para setup inicial)
    match /noticias/{document=**} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }

    // Configurações (PIX, etc) - público pode ler (necessário para doação), apenas superadmin pode escrever
    match /config/{document=**} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Doações - público pode criar, apenas superadmin pode ler/atualizar
    match /doacoes/{document=**} {
      allow create: if true;
      allow read, write: if isSuperAdmin();
    }

    // --- CPU RANKING RULES ---
    
    // Ranking Ativo: Público lê, apenas Admin escreve
    match /cpu_ranking/{document=**} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Submissões: Público cria (com validação básica), apenas Admin lê/edita
    match /cpu_submissions/{document=**} {
      // Qualquer um pode criar (enviar resultado)
      allow create: if true; 
      // Apenas admin pode ver a lista de pendentes e editar/deletar
      allow read, update, delete: if isSuperAdmin();
    }

    // -------------------------

    // Fórum - público pode ler, usuários autenticados podem escrever com validação
    match /forum_topics/{topicId} {
      allow read: if true;
      
      // Criação: Autenticado + Campos obrigatórios + Autor é o usuário
      allow create: if request.auth != null 
                    && request.resource.data.keys().hasAll(['title', 'content', 'authorId'])
                    && request.resource.data.authorId == request.auth.uid;
      
      // Atualização: 
      // 1. Autor editando conteúdo OU
      // 2. Qualquer autenticado atualizando contadores (viewCount, replyCount, lastReplyAt)
      allow update: if request.auth != null 
                    && (
                      (resource.data.authorId == request.auth.uid)
                      || 
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewCount', 'replyCount', 'lastReplyAt']))
                    );
      
      // Delete: Apenas autor ou SuperAdmin
      allow delete: if request.auth != null && (resource.data.authorId == request.auth.uid || isSuperAdmin());

      match /messages/{messageId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if request.auth != null && (resource.data.authorId == request.auth.uid || isSuperAdmin());
      }
    }
    
    // Regra global: negar tudo por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
